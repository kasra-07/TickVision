<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_left_right_time_view"
        android:paddingTop="@dimen/padding_bottom_top_table"
        android:paddingBottom="@dimen/padding_bottom_top_table"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/large_text_size"
        tools:ignore="RelativeOverlap"
        tools:text="02 : 53 : 13" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@id/tv_day"
        android:paddingTop="@dimen/padding_bottom_top_table"
        android:paddingBottom="@dimen/padding_bottom_top_table"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/large_text_size"
        tools:text="13 / 5 / 1398" />

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_left_right_time_view"
        android:paddingTop="@dimen/padding_bottom_top_table"
        android:paddingBottom="@dimen/padding_bottom_top_table"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/large_text_size"
        tools:text="یکشنبه" />

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_line_size"
        android:layout_below="@id/tv_date"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_left_right_time_view"
        android:paddingTop="@dimen/padding_bottom_top_table"
        android:paddingBottom="@dimen/padding_bottom_top_table"
        android:text="@string/time_00"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/large_text_size" />

    <TextView
        android:id="@+id/tv_title_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_left_right_time_view"
        android:paddingTop="@dimen/padding_bottom_top_table"
        android:paddingBottom="@dimen/padding_bottom_top_table"
        android:text="@string/working_hours_day_text"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/large_text_size" />

</RelativeLayout>